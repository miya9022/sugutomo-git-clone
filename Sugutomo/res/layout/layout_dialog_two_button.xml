<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_conner"
        android:orientation="vertical"
        android:weightSum="5">
        <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_weight="0.6">
        <LinearLayout 
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1">
            <TextView 
                android:id="@+id/loc1"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="基本モード"
                android:textSize="22sp"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"/>    
        </LinearLayout>
        <LinearLayout 
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1">
             <TextView 
                android:id="@+id/loc2"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="条件モード"
                android:textSize="22sp"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"/>
        </LinearLayout>
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_weight="0.6">
        <LinearLayout 
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1">
            <TextView 
                android:id="@+id/gioitinh"
                android:layout_width="fill_parent"
                android:text="性別"
                android:layout_gravity="center"
                android:gravity="center|left"
                android:layout_marginLeft="16dp"
                android:textSize="25sp"
                android:layout_height="fill_parent"/>
        </LinearLayout>
          <LinearLayout 
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_weight="1">
            <LinearLayout 
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="0.3">
            </LinearLayout>
             <LinearLayout 
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1.7">
                  <RadioButton 
                  android:id="@+id/nu"
                  android:layout_width="fill_parent"
                  android:text="女性"
                  android:textSize="27sp"
                  android:layout_gravity="center_horizontal|right"
                  android:layout_height="fill_parent"/>
            </LinearLayout>
            </LinearLayout>
            <LinearLayout 
               android:layout_width="0dp"
               android:layout_height="fill_parent"
               android:layout_weight="1">
              <RadioButton 
                  android:id="@+id/nam"
                  android:layout_width="fill_parent"
                  android:text="男性"
                  android:textSize="27sp"
                  android:layout_gravity="center|right"
                  android:layout_height="fill_parent"/>
           </LinearLayout>
           <LinearLayout 
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1">
             <RadioButton 
                  android:id="@+id/cahai"
                  android:layout_width="fill_parent"
                  android:text="両方"
                  android:textSize="27sp"
                  android:layout_gravity="center|right"
                  android:layout_height="fill_parent"/>        
           </LinearLayout>
    </LinearLayout>
    
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_weight="0.6">
        <LinearLayout 
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="2">
            <LinearLayout 
                android:layout_width="0dp"
                android:layout_weight="0.15"
                android:layout_height="fill_parent">
            </LinearLayout>
            <LinearLayout 
                android:layout_width="0dp"
                android:layout_weight="1.85"
                android:layout_height="fill_parent">
                <TextView 
                    android:id="@+id/km"
                    android:layout_width="fill_parent"
                    android:layout_gravity="center"
                    android:gravity="center|left"
                    android:textSize="23sp"
                    android:text="KM"
                    android:layout_height="fill_parent"/>      
            </LinearLayout>
        </LinearLayout>
         <LinearLayout 
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_weight="1">
              <LinearLayout 
                android:layout_width="0dp"
                android:layout_weight="1.85"
                android:layout_height="fill_parent">
                <TextView 
                    android:id="@+id/km2"
                    android:layout_width="fill_parent"
                    android:layout_gravity="center"
                    android:gravity="center|right"
                    android:textSize="23sp"
                    android:text="20KM"
                    android:layout_height="fill_parent"/>      
            </LinearLayout>
             <LinearLayout 
                android:layout_width="0dp"
                android:layout_weight="0.15"
                android:layout_height="fill_parent">
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
  <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_weight="0.6">
        <LinearLayout 
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="2">
            <LinearLayout 
                android:layout_width="0dp"
                android:layout_weight="0.15"
                android:layout_height="fill_parent">
            </LinearLayout>
            <LinearLayout 
                android:layout_width="0dp"
                android:layout_weight="1.85"
                android:layout_height="fill_parent">
                <TextView 
                    android:layout_width="fill_parent"
                    android:layout_gravity="center"
                    android:gravity="center|left"
                    android:textSize="23sp"
                    android:text="前回のログイン"
                    android:layout_height="fill_parent"/>      
            </LinearLayout>
        </LinearLayout>
         <LinearLayout 
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_weight="1">
              <LinearLayout 
                android:layout_width="0dp"
                android:layout_weight="1.85"
                android:layout_height="fill_parent">
                <TextView 
                    android:id="@+id/tgian"
                    android:layout_width="fill_parent"
                    android:layout_gravity="center"
                    android:gravity="center|right"
                    android:textSize="23sp"
                    android:text="15分前"
                    android:layout_height="fill_parent"/>      
            </LinearLayout>
             <LinearLayout 
                android:layout_width="0dp"
                android:layout_weight="0.15"
                android:layout_height="fill_parent">
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/Lightgray" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/tvButonClose"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_lnlayout"
            android:clickable="true"
            android:gravity="center"
            android:text="キャンセル"
            android:textColor="#000000"
            android:textSize="23sp" />
        <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="@color/Lightgray" />
        <TextView
            android:id="@+id/tvButonSubmit"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_lnlayout"
            android:clickable="true"
            android:gravity="center"
            android:text="絞り込み"
            android:textColor="#000000"
            android:textSize="23sp" />
    </LinearLayout>
        
    </LinearLayout>
    
</LinearLayout>