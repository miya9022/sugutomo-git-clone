<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_conner"
    android:orientation="vertical"
    android:paddingTop="10dip"
    android:weightSum="3"
    tools:ignore="NestedWeights" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:weightSum="3" >

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.49"
            android:orientation="vertical"
            android:weightSum="2" >

            <TextView
                android:id="@+id/id1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/filter_basic_title"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <View
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_marginBottom="10dip"
            android:layout_marginTop="10dip"
            android:layout_weight="0.02"
            android:background="@color/Lightgray"
            android:gravity="center" />

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.49"
            android:orientation="vertical"
            android:weightSum="2" >

            <TextView
                android:id="@+id/id2"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/filter_advance_title"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="5dip"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:weightSum="2" >

        <View
            android:id="@+id/id3"
            android:layout_width="0dip"
            android:layout_height="5dip"
            android:layout_weight="1"
            android:background="@color/red"
            android:orientation="horizontal" >
        </View>

        <View
            android:id="@+id/id4"
            android:layout_width="0dip"
            android:layout_height="5dip"
            android:layout_weight="1"
            android:background="@color/red"
            android:orientation="horizontal" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:background="@color/Lightgray"
        android:orientation="horizontal" />
    <!-- divider -->

    <LinearLayout
        android:id="@+id/filter_layout_scroll"
        android:layout_width="fill_parent"
        android:layout_height="180dip"
        tools:ignore="UselessParent" >

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:fadeScrollbars="false"
            android:scrollbarSize="5dip"
            android:scrollbarThumbVertical="@drawable/custom_scroll_style" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/filter_container"
                 >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="60dip"
                    android:orientation="vertical"
                    android:weightSum="2" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="0dip"
                        android:layout_weight="1.8"
                        android:orientation="horizontal"
                        android:weightSum="2" >

                        <LinearLayout
                            android:layout_width="0dip"
                            android:layout_height="fill_parent"
                            android:layout_weight="0.7"
                            android:baselineAligned="false"
                            android:orientation="horizontal"
                            android:weightSum="2" >

                            <LinearLayout
                                android:layout_width="0dip"
                                android:layout_height="fill_parent"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="1.9" >

                                <TextView
                                    android:id="@+id/gioitinh"
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:layout_gravity="left|center"
                                    android:gravity="left|center"
                                    android:text="@string/broastcast_sex"
                                    android:textSize="16sp" />
                            </LinearLayout>
                        </LinearLayout>

                        <RadioGroup
                            android:id="@+id/radioGroup"
                            android:layout_width="0dip"
                            android:layout_height="fill_parent"
                            android:layout_weight="1.3"
                            android:baselineAligned="true"
                            android:orientation="horizontal"
                            android:weightSum="4" >

                            <RadioButton
                                android:id="@+id/man"
                                android:layout_width="0dip"
                                android:layout_height="fill_parent"
                                android:layout_gravity="center"
                                android:layout_weight="1.3"
                                android:button="@drawable/bg_radio_btn"
                                android:gravity="center"
                                android:text="@string/broastcast_text_men"
                                android:textSize="16sp" />

                            <RadioButton
                                android:id="@+id/woman"
                                android:layout_width="0dip"
                                android:layout_height="fill_parent"
                                android:layout_gravity="center"
                                android:layout_weight="1.3"
                                android:button="@drawable/bg_radio_btn"
                                android:text="@string/broastcast_text_women"
                                android:textSize="16sp" />

                            <RadioButton
                                android:id="@+id/both"
                                android:layout_width="0dip"
                                android:layout_height="fill_parent"
                                android:layout_gravity="center"
                                android:layout_weight="1.3"
                                android:button="@drawable/bg_radio_btn"
                                android:text="@string/broastcast_text_both"
                                android:textSize="16sp" />
                        </RadioGroup>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="0dip"
                        android:layout_weight="0.07" >

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:background="@color/Lightgray" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/user_age"
                    android:layout_width="fill_parent"
                    android:layout_height="60dip"
                    android:orientation="vertical"
                    android:weightSum="2" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="0dip"
                        android:layout_weight="1.8"
                        android:baselineAligned="false"
                        android:orientation="horizontal"
                        android:weightSum="2" >

                        <LinearLayout
                            android:layout_width="0dip"
                            android:layout_height="fill_parent"
                            android:layout_weight="0.8"
                            android:baselineAligned="false"
                            android:orientation="horizontal"
                            android:weightSum="2" >

                            <LinearLayout
                                android:layout_width="0dip"
                                android:layout_height="fill_parent"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="1.9" >

                                <TextView
                                    android:id="@+id/tuoj"
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:layout_gravity="center"
                                    android:gravity="center|left"
                                    android:text="年齢"
                                    android:textSize="16sp" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dip"
                            android:layout_height="fill_parent"
                            android:layout_weight="1.2"
                            android:baselineAligned="false"
                            android:orientation="horizontal"
                            android:weightSum="2" >

                            <LinearLayout
                                android:layout_width="0dip"
                                android:layout_height="fill_parent"
                                android:layout_weight="1.9"
                                android:baselineAligned="false"
                                android:orientation="horizontal"
                                android:weightSum="3" >

                                <TextView
                                    android:id="@+id/filter_age_start"
                                    android:layout_width="0dip"
                                    android:layout_height="fill_parent"
                                    android:background="@drawable/dropdown_more"
                                    android:gravity="center"
                                    android:textSize="16sp"
                                    android:layout_weight="1.3" />

                                <LinearLayout
                                    android:layout_width="0dip"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="0.4" >

                                    <TextView
                                        android:layout_width="fill_parent"
                                        android:layout_height="fill_parent"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:text="~"
                                        android:textSize="25sp" />
                                </LinearLayout>


                                    <TextView
                                        android:id="@+id/filter_age_end"
                                        android:layout_width="0dip"
                                        android:layout_height="fill_parent"
                                        android:background="@drawable/dropdown_more"
                                        android:gravity="center"
                                    android:textSize="16sp"
                                        android:layout_weight="1.3" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="0dip"
                        android:layout_weight="0.07" >

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:background="@color/Lightgray" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="60dip"
                    android:orientation="vertical"
                    android:weightSum="2" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="0dip"
                        android:layout_weight="1.8"
                        android:baselineAligned="false"
                        android:orientation="horizontal"
                        android:weightSum="2" >

                        <LinearLayout
                            android:layout_width="0dip"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:baselineAligned="false"
                            android:orientation="horizontal"
                            android:weightSum="2" >

                            <LinearLayout
                                android:layout_width="0dip"
                                android:layout_height="fill_parent"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="1.9" >

                                <TextView
                                    android:id="@+id/khoangcach"
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:layout_gravity="center"
                                    android:gravity="center|left"
                                    android:text="@string/filter_distance"
                                
                                    android:textSize="16sp" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dip"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:baselineAligned="false"
                            android:orientation="horizontal"
                            android:weightSum="2" >

                            <LinearLayout
                                android:layout_width="0dip"
                                android:layout_height="fill_parent"
                                android:layout_weight="1.9" >

                                <TextView
                                    android:id="@+id/filter_distance"
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:layout_gravity="center"
                                    android:gravity="center|right"
                                    android:background="@drawable/dropdown_more"
                                    android:text="@string/not_input"
                                    android:textSize="16sp" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="0dip"
                        android:layout_weight="0.07" >

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:background="@color/Lightgray" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="60dip"
                    android:orientation="vertical"
                    android:weightSum="2" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="0dip"
                        android:layout_weight="1.8"
                        android:baselineAligned="false"
                        android:orientation="horizontal"
                        android:weightSum="2" >

                        <LinearLayout
                            android:layout_width="0dip"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:baselineAligned="false"
                            android:orientation="horizontal"
                            android:weightSum="2" >

                            <LinearLayout
                                android:layout_width="0dip"
                                android:layout_height="fill_parent"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="1.9" >

                                <TextView
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:layout_gravity="center"
                                    android:gravity="center|left"
                                    android:text="@string/filter_login"
                                    android:textSize="16sp" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dip"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:baselineAligned="false"
                            android:orientation="horizontal"
                            android:weightSum="2" >

                            <LinearLayout
                                android:layout_width="0dip"
                                android:layout_height="fill_parent"
                                android:layout_weight="1.9" >

                                <TextView
                                    android:id="@+id/filter_loginbefore"
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:layout_gravity="center"
                                    android:gravity="center|right"
                                    android:background="@drawable/dropdown_more"
                                     android:text="@string/not_input"
                                    android:textSize="16sp" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="0dip"
                        android:layout_weight="0.07" >

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:background="@color/Lightgray" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        style="?android:attr/buttonBarStyle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="3dip"
        android:paddingLeft="3dip"
        android:paddingRight="3dip" >

        <Button
            android:id="@+id/tvButonClose"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dip"
            android:layout_height="45dip"
            android:layout_weight="1"
            android:background="@drawable/cancel_btn"
            android:clickable="true"
            android:gravity="center" />

        <Button
            android:id="@+id/tvButonSubmit"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dip"
            android:layout_height="45dip"
            android:layout_weight="1"
            android:background="@drawable/button_press"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/filter_submit"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>