<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="right|center_vertical"
    android:layout_marginRight="10dip"
    android:clickable="false"
    android:orientation="horizontal" >
    <ImageView
        android:id="@+id/notice_sendall"
        android:layout_width="30dp"
        android:layout_height="fill_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dip"
        android:background="@drawable/btn_click_effect"
        android:src="@drawable/btn_notice"
         />

    <RelativeLayout
        android:id="@+id/notify_message"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="15dip"
        android:layout_marginTop="5dp"
        android:background="@drawable/btn_click_effect"
        >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:src="@drawable/btn_notify_message" />

        <TextView
            android:id="@+id/count_message_text"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:background="@drawable/counter_bg"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dip"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="13sp" />

        <!-- android:background="@drawable/btn_click_effect" -->
    </RelativeLayout>

</LinearLayout>