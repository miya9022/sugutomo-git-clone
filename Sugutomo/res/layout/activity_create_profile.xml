<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    tools:ignore="contentDescription" >

    <ListView
        android:id="@+id/list_profile_items"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="start"
        android:layout_weight="9.7"
        android:cacheColorHint="@color/list_background_pressed"
        android:choiceMode="singleChoice"
        android:divider="@color/list_divider"
        android:dividerHeight="1dp"
        android:gravity="center_vertical"
        android:scrollbarSize="10dp"
        android:scrollbarThumbVertical="@drawable/custom_scroll_style" >
    </ListView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_weight="0.3"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btn_create_profile"
            style="@style/DefaultButtonText"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_vertical"
            android:background="@color/text_edit"
            android:gravity="center|center_vertical"
            android:onClick="onClick"
            android:text="@string/btn_create_profile"
            android:textColor="@android:color/white"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>